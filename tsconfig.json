{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "lib": ["ES2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}